[user]
	name = <%= print("Your Name: "); STDOUT.flush; STDIN.gets.chomp %>
	email = <%= print("Your Email: "); STDOUT.flush; STDIN.gets.chomp %>
[alias]
  lg = log --graph --format='%cd %C(yellow)%h %Creset%s %C(red bold)%d %Creset%C(cyan) [A:%an, C:%cn]%Creset' --date=short --abbrev=10
  st = status -sb
  br = branch -av
  pu = pull --rebase
  po = pull origin
  ru = remote update
  ci = commit
  di = diff --word-diff
  dif = diff â€“word-diff
  difff = diff --color-words
  dh = diff HEAD^..HEAD
  co = checkout
  su = submodule update
  stl = stash list
  sts = stash save
  std = stash drop
  sta = stash apply
  st0 = stash show -p stash@{0}
  cl = clean -d -f -x
[color]
	diff = auto
	status = auto
	branch = auto
[core]
	excludesfile = <%= ENV['HOME'] %>/.gitignore
	editor = vi
	autocrlf = input
[apply]
	whitespace = nowarn
[format]
	pretty = %C(yellow)%h%Creset %s %C(red)(%an, %cr)%Creset
[github]
	user = <%= print("GitHub Username: "); STDOUT.flush; STDIN.gets.chomp %>
	token = <%= print("GitHub API Token: "); STDOUT.flush; STDIN.gets.chomp %>
[push]
	default = matching
